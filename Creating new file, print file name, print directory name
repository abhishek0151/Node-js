#1 To create new file
const fs = require('fs');
fs.writeFileSync("data.txt","first file created in node js");

#2 To print current directory name
const fs = require('fs');
console.log("-->>","__dirname");

#3 To print file name
console.log("-->>","__filename");



another way to import or import specific module
const fs = require('fs').writeFileSync;
fs("abc.txt","abcde");
